{
    "compilerOptions": {
       "target": "ES2020",
       "module": "CommonJS",
       "forceConsistentCasingInFileNames": true, 
       "outDir": "./build",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": false,
       "esModuleInterop": true,
       "resolveJsonModule": true,
       "baseUrl": ".",
       "skipLibCheck": true,
       "paths": {
           "*": ["node_modules/*"],
           "src/*": ["./src/*"]
       }
    },
    "ts-node": {
       "transpileOnly": true,
       "compilerOptions": {
          "noUnusedLocals": false,
          "noUnusedParameters": false
       }
    }
}